<!DOCTYPE html>

<html>
    <head>
        <title>FilmStalker - Reset password</title>
        <link rel="stylesheet" href="../css/main.css">
        <link rel="stylesheet" href="../css/logIn.css">
        <link rel="stylesheet" href="../css/normalize.css">
        <link rel="styleshet" href="../css/normalize.min.css">
        <link rel='icon' href='../favicon.ico' type='image/x-icon'>	
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="../js/resetPassword.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="UTF-8">
    </head>

    <body>
      <%- include('../partials/navApp') %>
        <div class="container">
            <% if(!(typeof wasFakeKey == 'undefined') && wasFakeKey == true){ %>
                <h2>Key was incorect</h2>
                <% } %>
            <% if(!(typeof wrongUserName == 'undefined') && wrongUserName == true){ %>
                <h2>User not found</h2>
                <% } %>
            <form class="form" action="/doResetPassword" id="login" method="POST">
                <h1 class="formTitle"><i class="material-icons">login</i>Reset password</h1>
                <div class="formInput">
                    <input type="text" class="form__input" autofocus placeholder="Username" name="username" id="username">
                </div>
                <div class="formInput">
                    <input type="text" class="form__input" autofocus placeholder="Reset Password key" name="resetkey" id="resetkey">
                </div> 
                <div class="formInput">
                    <input type="password" class="form__input" autofocus placeholder="NewPassword" name="newpassword">
                </div> 
                <button class="formButton" type="submit">Set New Password</button>
            </form> 
        </div>

        <%- include('../partials/footer') %>
        <script src="../js/login_action.js "></script>
    </body>
